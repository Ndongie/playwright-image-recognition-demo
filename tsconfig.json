{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "include": ["tests", "utils", "pages", "global-setup.ts", "global-teardown.ts"],
  "exclude": ["node_modules", "playwright-report", "allure-report"]
}
